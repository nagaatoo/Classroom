<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Информация о пользователе -->
    <TextView
        android:id="@+id/userInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пользователь"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="4dp" />

    <!-- Подсказка по жестам -->
    <TextView
        android:id="@+id/gestureHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Свайп в правом нижнем углу для перелистывания"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:background="#88FFFFFF"
        android:padding="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="2dp" />

    <!-- ViewPager2 для страниц -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/userInfoText"
        app:layout_constraintBottom_toTopOf="@id/buttonWrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Зона свайпа (визуальный индикатор) -->
    <View
        android:id="@+id/swipeZone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/swipe_zone_background"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="216dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="1dp" />

    <!-- Текст в зоне свайпа -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← →"
        android:textSize="24sp"
        android:textColor="#66000000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/swipeZone"
        app:layout_constraintBottom_toBottomOf="@id/swipeZone"
        app:layout_constraintStart_toStartOf="@id/swipeZone"
        app:layout_constraintEnd_toEndOf="@id/swipeZone"
        android:elevation="2dp" />

    <!-- Индикатор номера страницы -->
    <TextView
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Страница 1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/page_indicator_background"
        android:padding="8dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/buttonWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp" />

    <!-- Кнопки управления -->
    <LinearLayout
        android:id="@+id/buttonWrapper"
        style="?android:attr/buttonBarStyle"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/tool"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:text="Сменить инструмент" />

        <Button
            android:id="@+id/cleanAll"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_weight="1"
            android:text="Очистить страницу" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

